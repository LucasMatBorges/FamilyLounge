<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lucasmatborges.familylounge.LoginScreen"
    android:background="@color/ripple_material_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FAMILY LOUNGE APP"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextID"
        android:hint="ProntuÃ¡rio"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textViewProntuario"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sobre o APP"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:onClick="info" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:id="@+id/button"
        android:background="@color/colorPrimaryDark"
        android:onClick="logar"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/editTextID"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView2"
        android:background="@drawable/heart"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewProntuario"
        android:layout_above="@+id/editTextID"
        android:layout_alignStart="@+id/button"
        android:text="k" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/info"
        android:onClick="info" />

</RelativeLayout>



